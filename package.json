{
  "name": "cursys",
  "version": "1.0.0",
  "description": "Node.js TypeScript app server with HTTP and WebSocket support",
  "main": "_dist/node/serve.js",
  "types": "_dist/lib-node/lib-node.d.ts",
  "exports": {
    ".": {
      "types": "./_dist/lib-node/lib-node.d.ts",
      "import": "./_dist/lib-web/lib-web.js",
      "require": "./_dist/lib-node/lib-node.js"
    },
    "./web": {
      "types": "./_dist/lib-web/lib-web.d.ts",
      "import": "./_dist/lib-web/lib-web.js"
    },
    "./node": {
      "types": "./_dist/lib-node/lib-node.d.ts",
      "require": "./_dist/lib-node/lib-node.js"
    }
  },
  "scripts": {
    "dev": "npm run build:lib-web && npm run build:lib-node && npm run build:node && npm run copy-assets && npm run build:web && npm start",
    "build": "tsup",
    "build:node": "tsup src/node/serve.ts --format cjs --outDir _dist/node --target node18 --dts",
    "build:web": "tsup src/web/main.ts --format esm --outDir _dist/web --target es2020 --dts && cp src/web/index.html _dist/web/",
    "build:lib-web": "tsup src-lib/lib-web.ts --format esm --outDir _dist/lib-web --target es2020 --dts",
    "build:lib-node": "tsup src-lib/lib-node.ts --format cjs --outDir _dist/lib-node --target node18 --dts",
    "copy-assets": "cp -r src-assets/* src/web/ 2>/dev/null || true",
    "start": "node _dist/node/serve.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "typescript",
    "websocket",
    "express",
    "tsup"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.3",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.0",
    "tsup": "^8.0.2",
    "typescript": "^5.1.6"
  },
  "targets": {
    "node": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/node",
      "sourceMap": true
    },
    "web": {
      "context": "browser",
      "distDir": "_dist/web",
      "publicUrl": "/"
    },
    "lib-web": {
      "context": "browser",
      "distDir": "_dist/lib-web",
      "outputFormat": "esmodule"
    },
    "lib-node": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/lib-node",
      "sourceMap": true
    }
  }
}
