{
  "name": "cursys",
  "version": "1.0.0",
  "description": "Node.js TypeScript app server with HTTP and WebSocket support",
  "main": "_dist/node/serve.js",
  "types": "_dist/lib-node/lib-node.d.ts",
  "exports": {
    ".": {
      "types": "./_dist/lib-node/lib-node.d.ts",
      "import": "./_dist/lib-web/lib-web.js",
      "require": "./_dist/lib-node/lib-node.js"
    },
    "./web": {
      "types": "./_dist/lib-web/lib-web.d.ts",
      "import": "./_dist/lib-web/lib-web.js"
    },
    "./node": {
      "types": "./_dist/lib-node/lib-node.d.ts",
      "require": "./_dist/lib-node/lib-node.js"
    }
  },
  "scripts": {
    "dev": "npm run build:lib-web && npm run build:lib-node && npm run build:node && npm run copy-assets && npm run build:web && npm start",
    "build:node": "parcel build src/node/serve.ts --target node",
    "build:web": "parcel build src/web/index.html --target web",
    "build:lib-web": "parcel build src-lib/lib-web.ts --target lib-web",
    "build:lib-node": "parcel build src-lib/lib-node.ts --target lib-node",
    "copy-assets": "cp -r src-assets/* src/web/ 2>/dev/null || true",
    "start": "node _dist/node/serve.js"
  },
  "keywords": [
    "typescript",
    "websocket",
    "express",
    "parcel"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.3",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "parcel": "^2.9.3",
    "typescript": "^5.1.6"
  },
  "targets": {
    "node": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/node",
      "sourceMap": true
    },
    "web": {
      "context": "browser",
      "distDir": "_dist/web",
      "publicUrl": "/"
    },
    "lib-web": {
      "context": "browser",
      "distDir": "_dist/lib-web",
      "outputFormat": "esmodule"
    },
    "lib-node": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/lib-node",
      "sourceMap": true
    }
  }
}
