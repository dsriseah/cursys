{
  "name": "cursor-jason-demo",
  "version": "1.0.0",
  "description": "Node.js TypeScript app server with HTTP and WebSocket support",
  "main": "_dist/server/index.js",
  "scripts": {
    "dev": "npm run build:lib-client && npm run build:lib-server && npm run build:server && npm run copy-assets && npm run build:client && npm start",
    "build:server": "parcel build src/server/index.ts --target server",
    "build:client": "parcel build src/client/index.html --target client",
    "build:lib-client": "parcel build src-lib/lib-client.ts --target lib-client",
    "build:lib-server": "parcel build src-lib/lib-server.ts --target lib-server",
    "copy-assets": "cp -r src-assets/* src/client/ 2>/dev/null || true",
    "start": "node _dist/server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "parcel": "^2.9.3",
    "typescript": "^5.1.6"
  },
  "targets": {
    "server": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/server",
      "sourceMap": true
    },
    "client": {
      "context": "browser",
      "distDir": "_dist/client",
      "publicUrl": "/"
    },
    "lib-client": {
      "context": "browser",
      "distDir": "_dist/lib-client",
      "outputFormat": "esmodule"
    },
    "lib-server": {
      "context": "node",
      "includeNodeModules": true,
      "outputFormat": "commonjs",
      "distDir": "_dist/lib-server",
      "sourceMap": true
    }
  }
} 